    .hotSalesProduct
        // 背景图
        .blockBg
        .recommendBox.innerW.clearfix
            // 标题
            .titleBox
                h3.titleName 热销产品
                .descrption
                    p
                        | 在这里，我们一起随时拥抱自然，与生活相拥
                        br
                        | 在这里，开启一段心灵的旅程
            // 列表
            .recommendContent
                // 更多
                //.more MORE>>
                .contentList.clearfix
                    .hot-box
                        each item in datas['hot-product']
                            // 列表遍历
                            .item.longH
                                // 遮罩层
                                .signLayer
                                    .line
                                    i.icon.icon-sign
                                    span.signText=item.name
                                // 主图
                                img.mainImg(src=item.mig, alt=item.title)
                                // 分类:推荐
                                span.keyWords
                                    i.icon.icon-recommend
                                // 弹出层
                                .itemLayer
                                    .layerInner
                                        h3
                                            +strcut(item.name,25)
                                        p.des=item.remark
                                        .priceBox
                                            .originalPrice 原价 ￥#{item.beforePrice}
                                            .normalPrice 普通价 ￥#{item.price}
                                            .memberPrice 会员价 ￥#{item.vipPrice}
                                        a.buyBtn(href=item.url)
                                            i.icon.icon-buyTxt

    // 推荐产品
    .recommendWrap
        .bg
        // 景点推荐
        .scenicRecommend.innerW
            .recommendBox.clearfix
                // 标题
                .titleBox
                    h3.titleName 景点推荐
                    .descrption
                        p
                            | 在这里，我们一起随时拥抱自然，与生活相拥
                            br
                            | 在这里，开启一段心灵的旅程
                // 列表
                .recommendContent
                    a.more(href='/list/ticket') MORE>>
                    .contentList.clearfix
                        each item,index in datas["pc-ticket"]
                            // 列表遍历
                            .item.shadow(class=(index==4)?'longW':'standard')
                                // 主图
                                a(href=item.url)
                                    img.mainImg(src=item.mig, alt=item.title)
                                    .normalLayer.ellipsis=item.name
                                // 弹出层
