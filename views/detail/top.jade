mixin hotel(slide,data)
    .detail-head.mb10
        .item-summary-box
            .item-summary.type1.tkt
                // 标题
                .item-name.hotel-name.r-price
                    h4
                        +strcut(data.aliasName,26)
                        span.start-box
                            -for(var i=0;i<data.goodsLevel;i++)
                                i
                    .hotel-tags.c-red
                        em=data.labelsName
                    .price.c-red
                        i ￥
                        |#{data.priceShow}
                        em 起
                .border-goods
                +info(data)
                .address
                    a.go-map-a(gomap='#jtzn')=data.addr
                .detail-info.hotel-info
                    p.n
                        label 酒店设施：
                        if data.hotelMachine
                            -var hotelMachine=data.hotelMachine.split(',')
                            span
                                each item in hotelMachine
                                    case item
                                        when 'wifi'
                                            em.icon.icon-wifi
                                        when '停车场'
                                            em.icon.icon-pack
                                        when 'spa'
                                            em.icon.icon-spa
                                        when '健身房'
                                            em.icon.icon-jsf
                                        when '餐厅'
                                            em.icon.icon-food
                                        when '瑜伽房'
                                            em.icon.icon-yy


                    p.n
                        label 酒店特色：
                        span.over=data.subtitle
                .share
                    +share

        +imgslide(slide)

mixin combo(slide,data)
    .detail-head.mb10
        // 商品详情右侧
        .item-summary-box
            .item-summary.type0.tkt
                // 标题
                .item-name
                    h4=data.aliasName
                    if data.labelsName
                        .tags
                            span=data.labelsName
                .detail-price
                    del.c-red 原价：#{data.priceShow}元
                    if data.currentPrice!=0
                        .saleprice
                            label.c-red 优惠价：
                            span
                                | #{data.currentPrice}
                                em 元 起
                .share
                    +share
                +info(data)
                .detail-low-txt
                    p
                        +strcut(data.subtitle,300)
                .r-detail-bottom
                    //.zyx-choose-type
                    //    span.on
                    //        +strcut(data.aliasName,26)
                    .btn
                        .detail-num.inline
                            strong 购买份数
                            span#adult-number
                                input.number(type='tel', value='1', id='amount')
                        .zyx-item-btn.inline
                            //.base-img.inline 扫码预订
                            a.zyx-i-btn.inline.blue-bg-down.ml175(href='javascript:;') 立即预订
        .item-left
            +bigImgSlide(slide)
            .empblock
            #calendar.detail-calender.zyx-calendar
            input(type="hidden",class="hiddata")

mixin shop(slide,data)
