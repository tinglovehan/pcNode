mixin info(data)
    ul.info-menu
        li
            span.branch
                em 4.9
                | /5分
            strong 好评率
        li
            span.c-red.count=data.countComment ? data.countComment : '0'
            strong 点评人数
        li
            span.c-red=data.salesNum ? data.salesNum : '0'
            strong 月销售量

mixin imgslide(data)
    .item-left
        .item-imgslide.type1
            .bd
                ul
                    each item in data
                        li
                            img(src=item.pcUrl, alt='')
            .hd
                a.slidebtn.prev(href='javascript:;') <
                a.slidebtn.next(href='javascript:;') >
                ul
                    each item in data
                        li
                            i.bg
                            img(src=item.pcUrl, alt='')

mixin bigImgSlide(data)

    .detail-ban
