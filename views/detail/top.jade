mixin top(slide,data,module)
    case module
        when 'ticket'
            +ticket(slide,data)
        when 'hotel'
            +hotel(slide,data)
        when 'combo'
            +combo(slide,data)
        when 'shop'
            +shop(slide,data)
        when 'car'
            +car(slide,data)
        when 'route'
            +route(slide,data)
        when 'repast'
            +repast(slide,data)

mixin ticket(slide,data)
    .detail-head.mb10
        // 商品详情右侧
        .item-summary-box
            .item-summary.type1.tkt
                // 标题
                .item-name.ticket-name.r-price
                    h4
                        +strcut(data.aliasName,26)
                        span.level.c-blue
                            -for(var i=0;i<data.goodsLevel;i++)
                                | A
                    .price.c-red
                        i ￥
                        | #{data.priceShow}
                        em 起
                .border-goods
                +info(data)
                .address
                    a.go-map-a(gomap='#jtzn')=data.addr
                    .ticket-tags.inline
                        span=data.labelsName
                .detail-info.hotel-info
                    p.n
                        label 开放时间：
                        span #{data.openTime}-#{data.endTime}
                    p.n
                        label 景区特色：
                        span
                            +strcut(data.anotherName,46)
                .share
                    +share
        // 轮播图模块
        +imgslide(slide)
